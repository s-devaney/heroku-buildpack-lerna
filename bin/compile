#!/usr/bin/env bash
set -e

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BUILDPACK_DIR=$(cd "$(dirname "${0:-}")"; cd ..; pwd)
STAGE="$(mktemp -d)"

source "$BUILDPACK_DIR/lib/output.sh"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    error "APP_BASE was not set. Aborting"
    exit 1
fi

APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"

acceptlist_regex=${2:-''}
denylist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH|BUILPACK_DIR|APP_BASE|STAGE)$'}
if [ -d "$ENV_DIR" ]; then
for e in $(ls $env_dir); do
    echo "$e" | grep -E "$acceptlist_regex" | grep -qvE "$denylist_regex" &&
    export "$e=$(cat $ENV_DIR/$e)"
    :
done
fi

cd "${BUILD_DIR}"

header "Installing dependencies (lerna bootstrap)"
lerna bootstrap --scope="${APP_BASE}" --include-dependencies 2>&1 | output

header "Building ${APP_BASE} and its dependencies"
lerna run build --scope="${APP_BASE}" --include-dependencies --stream 2>&1 | output

declare -p

header "Success!"